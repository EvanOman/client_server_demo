# Database
DATABASE_URL=postgresql+asyncpg://api_user:api_password@localhost:5432/tour_booking

# Application
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# Server
HOST=127.0.0.1
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Background workers
HOLD_EXPIRY_INTERVAL=60
WAITLIST_INTERVAL=30

# Idempotency
IDEMPOTENCY_TTL_SECONDS=86400
IDEMPOTENCY_CACHE_SIZE=10000